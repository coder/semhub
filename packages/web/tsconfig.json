{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./build",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/core/*": ["../core/src/*"],
      "@/workers/*": ["../workers/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../workers"
    }
  ]
}
