{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/core/*": [
        "../core/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
  },
  "references": [
    {
      "path": "../core"
    }
  ]
}
