{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@semhub/core/*": ["../core/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ]
}
