{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@/core/*": [
        "../core/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ]
}
