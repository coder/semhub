{
  "name": "semhub",
  "version": "0.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "sst dev",
    "typecheck": "bun --filter=* typecheck",
    "format:write": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "cd packages/web && eslint .",
    "lint:fix": "cd packages/web && eslint . --fix",
    "deploy:prod": "sst deploy --stage prod",
    "secret:load": "sst secret load .secrets",
    "secret:load:prod": "sst secret load .secrets --stage prod",
    "script": "cd packages/scripts && bun run shell"
  },
  "devDependencies": {
    "typescript": "5.6.2",
    "@eslint/compat": "^1.2.0",
    "@eslint/js": "^9.12.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/bun": "latest",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "globals": "^15.10.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "@pulumi/pulumi": "^3.136.1",
    "@radix-ui/react-slot": "^1.1.0",
    "sst": "^3.2.26"
  }
}
